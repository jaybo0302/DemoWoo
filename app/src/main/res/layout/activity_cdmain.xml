<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cdwoo.demowoo.CDMainActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/play_page_default_cover"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintDimensionRatio="1">
        <ImageView
            android:id="@+id/currentCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.66"
            app:layout_constraintDimensionRatio="1"
            />
        <ImageView
            android:id="@+id/disc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintDimensionRatio="1"
            android:src="@drawable/play_page_disc"/>
        <ImageView
            android:id="@+id/play_page_needle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintDimensionRatio="1"
            android:translationX="-48px"
            android:translationY="12px"
            android:rotation="30"
            android:src="@drawable/play_page_needle"/>
    </android.support.constraint.ConstraintLayout>
    <com.cdwoo.demowoo.Cover
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/child_view1"
        app:layout_constraintStart_toEndOf="@id/main_view"
        app:backName="classicalmusic"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:url = "http://strm112.1.fm/classical_mobile_mp3"
        app:title="Otto's Classical"
        >
    </com.cdwoo.demowoo.Cover>
    <com.cdwoo.demowoo.Cover
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/child_view2"
        app:layout_constraintTop_toBottomOf="@id/child_view1"
        app:layout_constraintStart_toEndOf="@id/main_view"
        app:backName="sax"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:url = "http://strm112.1.fm/sax4ever_mobile_mp3"
        app:title="Sax"
        >
    </com.cdwoo.demowoo.Cover>
    <com.cdwoo.demowoo.Cover
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backName="coffee"
        android:id="@+id/child_view3"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/child_view2"
        app:layout_constraintStart_toEndOf="@id/main_view"
        app:url = "http://strm112.1.fm/caferadio_mobile_mp3"
        app:title="Cafe"
        >
    </com.cdwoo.demowoo.Cover>
    <com.cdwoo.demowoo.Cover
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backName="kid"
        android:id="@+id/child_view4"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/main_view"
        app:url = "http://strm112.1.fm/kidsfm_mobile_mp3"
        app:title="Kid"
        >
    </com.cdwoo.demowoo.Cover>
    <com.cdwoo.demowoo.Cover
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backName="soundtracks"
        android:id="@+id/child_view5"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/main_view"
        app:layout_constraintStart_toEndOf="@id/child_view4"
        app:url = "http://strm112.1.fm/moviesoundtracks_mobile_mp3"
        app:title="Soundtracks"
        >
    </com.cdwoo.demowoo.Cover>
    <com.cdwoo.demowoo.Cover
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backName="blues"
        android:id="@+id/child_view6"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/main_view"
        app:layout_constraintStart_toEndOf="@id/child_view5"
        app:url = "http://strm112.1.fm/blues_mobile_mp3"
        app:title="Blues"
        >
    </com.cdwoo.demowoo.Cover>
    <com.cdwoo.demowoo.Cover
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backName="s90"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/child_view3"
        app:layout_constraintStart_toEndOf="@id/child_view6"
        app:url = "http://strm112.1.fm/partyzone90s_mobile_mp3"
        app:title="90s Zone"
        >
    </com.cdwoo.demowoo.Cover>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/child_view4"
        android:background="#EA9A96"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/love"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/love"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="@id/love"
            android:src="@drawable/d"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintTop_toTopOf="@id/love"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/love"
            android:src="@drawable/seven"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintTop_toTopOf="@id/love"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
